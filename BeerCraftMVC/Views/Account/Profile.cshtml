@model BeerCraftMVC.Models.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Your Profile";
}
@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="~/css/second_layout.css" />
}
<div class="profile-grid-container">
    <header class="profile-header">
        <h1>@ViewData["Title"]</h1>
    </header>

    <section class="profile-details-grid">
        <h2 class="section-title-grid">Profile Details</h2>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
            <dd>@Html.DisplayFor(model => model.Username)</dd>

            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </section>

    <section class="profile-inventory-grid">
        <h2 class="section-title-grid">@Html.DisplayNameFor(model => model.InventoryItems)</h2>
        @if (Model.InventoryItems.Any())
        {
            <ul class="inventory-list-grid">
                @foreach (var item in Model.InventoryItems)
                {
                    <li>
                        <span class="inv-name">@Html.DisplayFor(modelItem => item.IngredientName)</span>
                        <span class="inv-quantity">@Html.DisplayFor(modelItem => item.Quantity)</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="empty-message">Your inventory is empty.</p>
        }
            </section>

    <footer class="profile-actions-grid">
        <a asp-action="EditProfile" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
    </footer>
