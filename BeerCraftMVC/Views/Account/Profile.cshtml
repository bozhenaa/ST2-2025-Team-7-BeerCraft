@model BeerCraftMVC.Models.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Your Profile";
}
@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="~/css/second_layout.css" />
}
<div class="profile-container">
    <header class="profile-header">
        <h1>@ViewData["Title"]</h1>
    </header>

    <section class="profile-details-section">
        <h2 class="section-title">Profile Details</h2>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
            <dd>@Html.DisplayFor(model => model.Username)</dd>

            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </section>

    <section class="profile-inventory-section">
        <h2 class="section-title">@Html.DisplayNameFor(model => model.InventoryItems)</h2>
        @if (Model.InventoryItems.Any())
        {
            <ul class="inventory-list-rows">
                @foreach (var item in Model.InventoryItems)
                {
                    <li>
                        <span class="inv-name">@Html.DisplayFor(modelItem => item.IngredientName)</span>
                        <span class="inv-quantity">@Html.DisplayFor(modelItem => item.Quantity)</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="empty-message">Your inventory is empty.</p>
        }

    </section>

    <section class="profile-recipes-section">
        <h2 class="section-title">@Html.DisplayNameFor(model => model.CreatedRecipes)</h2>
        @if (Model.CreatedRecipes.Any())
        {
            <ul class="recipe-list-rows">
                @foreach (var item in Model.CreatedRecipes)
                {
                    <li>
                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="empty-message">You have not created any recipes yet.</p>
        }
    </section>
    <section class="profile-liked-recipes-section">
        <h2 class="section-title">@Html.DisplayNameFor(model => model.LikedRecipes)</h2>
        @if (Model.LikedRecipes.Any())
        {
            <ul class="recipe-list-rows">
                @foreach (var item in Model.LikedRecipes)
                {
                    <li>
                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="empty-message">You have not liked any recipes yet.</p>
        }
    </section>

    <footer class="profile-actions">
        <a asp-action="EditProfile" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
        <a asp-controller="Inventory" asp-action="Index" class="btn btn-primary">Edit Inventory</a>
    </footer>
</div>