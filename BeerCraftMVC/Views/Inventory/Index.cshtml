@model BeerCraftMVC.Models.ViewModels.Inventory.InventoryIndexViewModel
@{
    ViewData["Title"] = "My Inventory";
}
@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" />
}

<div class="inventory-container">
    <header class="inventory-header">
        <h1>@ViewData["Title"]</h1>
    </header>

    <div class="inventory-content-wrapper">
        <section class="inventory-form-column">
            <h2 class="section-title-inv">Add or Update Item</h2>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group-inv">
                    <label asp-for="AddForm.IngredientId"></label>
                    <select asp-for="AddForm.IngredientId" asp-items="Model.AddForm.AvailableIngredients" class="form-select-inv" id="ingredientSelect">
                        <option value="">-- Select Ingredient --</option>
                        <option value="-1">--Add New Ingredient--</option>
                    </select>
                    <span asp-validation-for="AddForm.IngredientId" class="text-danger"></span>
                </div>

                <div id="newIngredientFields" style="display:none; margin-left:1px;border-left: 2px solid var(--accent-color); padding-left: 1rem;">
                    <div class="form-group-inv">
                        <label asp-for="AddForm.NewIngredientName"></label>
                        <input asp-for="AddForm.NewIngredientName" class="form-control-inv" type="text" placeholder="e.g., Orange Peels.."/>
                        <span asp-validation-for="AddForm.NewIngredientName" class="text-danger"></span>
                    </div>
                    <div class="form-group-inv">
                        <label asp-for="AddForm.NewIngredientTypeId"></label>
                        <select asp-for="AddForm.NewIngredientTypeId" asp-items="Model.AvailableIngredientTypes" class="form-select-inv">
                            <option value="">-- Select Ingredient Type--</option>
                        </select>
                        <span asp-validation-for="AddForm.NewIngredientTypeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group-inv">
                    <label asp-for="AddForm.Quantity"> Quantity in grams</label>
                    <input asp-for="AddForm.Quantity" type="number" step="any" class="form-control-inv" />
                    <span asp-validation-for="AddForm.Quantity" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-inv">Add/Update</button>
            </form>
        </section>

        <section class="inventory-list-column">
            <h2 class="section-title-inv">Current Stock</h2>
            @if (Model.InventoryItems.Any())
            {
                <table class="inventory-table">
                    <thead>
                        <tr>
                            <th>Ingredient</th>
                            <th>Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InventoryItems)
                        {
                            <tr>
                                <td>@item.IngredientName</td>
                                <td>@item.Quantity</td>
                                <td class="action-cell">
                                    <form asp-action="Delete" asp-route-ingredientId="@item.IngredientId" method="post">
                                        <button type="submit" class="btn-delete">&times;</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="empty-message-inv">Your inventory is empty.</p>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const select = document.getElementById('ingredientSelect');
            const newFields = document.getElementById('newIngredientFields');
            const newNameInput = newFields.querySelector('input[name*="NewIngredientName"]');
            const newTypeSelect = newFields.querySelector('select[name*="NewIngredientTypeId"]');

            function toggleFields() {
                if (select.value === '-1') {
                    newFields.style.display = 'block';
                } else {
                    newFields.style.display = 'none';
                    if (newNameInput) newNameInput.value = '';
                    if (newTypeSelect) newTypeSelect.value = '';
                }
            }

            select.addEventListener('change', toggleFields);
            toggleFields();
        });
    </script>
}