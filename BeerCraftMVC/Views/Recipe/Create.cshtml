@model BeerCraftMVC.Models.ViewModels.Recipes.AddRecipeViewModel
@{
    ViewData["Title"] = "Create New Recipe";
}
@section Styles {
    <link rel="stylesheet" href="~/css/add-recipe.css" />
}

<h1>@ViewData["Title"]</h1>

<div class="form-wrapper">

    <div class="form-content">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* --- Име и Описание (Без промяна) --- *@
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Classic American Pale Ale" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe your recipe..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <h4 class="mt-4">Ingredients</h4>
            @* --- 👇 КОНТЕЙНЕР ЗА РЕДОВЕТЕ 👇 --- *@
            <div id="ingredientsList">
                @* --- 👇 @for ЦИКЪЛЪТ ГЕНЕРИРА РЕДОВЕТЕ ДИРЕКТНО ТУК 👇--- *@
                @for (int i = 0; i < Model.Ingredients.Count; i++)
                {
                    <div class="ingredient-row row mb-3 align-items-start" data-index="@i">
                        <div class="col-md-5 ingredient-selection">
                            <label asp-for="Ingredients[i].IngredientId" class="form-label"></label>
                            <select asp-for="Ingredients[i].IngredientId" asp-items="Model.AvailableIngredients" class="form-select ingredient-select">
                                <option value="">-- Select Ingredient --</option>
                                <option value="-1">-- Add New Ingredient --</option>
                            </select>
                            <span asp-validation-for="Ingredients[i].IngredientId" class="text-danger"></span>
                            <div class="new-ingredient-fields" style="display: none; margin-top: 10px;">
                                <input asp-for="Ingredients[i].NewIngredientName" class="form-control mb-2" placeholder="Enter new ingredient name" />
                                <span asp-validation-for="Ingredients[i].NewIngredientName" class="text-danger"></span>
                                <select asp-for="Ingredients[i].NewIngredientTypeId" asp-items="Model.AvailableIngredientTypes" class="form-select ingredient-type-select">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Ingredients[i].NewIngredientTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Ingredients[i].Quantity" class="form-label"></label>
                            <input asp-for="Ingredients[i].Quantity" type="number" step="any" class="form-control" placeholder="e.g., 5.5" />
                            <span asp-validation-for="Ingredients[i].Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Ingredients[i].Unit" class="form-label"></label>
                            <select asp-for="Ingredients[i].Unit" asp-items="Model.AvailableUnits" class="form-select">
                                <option value="">-- Unit --</option>
                            </select>
                            <span asp-validation-for="Ingredients[i].Unit" class="text-danger"></span>
                        </div>
                        <div class="col-md-1 text-end">
                            <button type="button" class="btn btn-sm btn-outline-danger remove-ingredient mt-4" style="@(Model.Ingredients.Count <= 1 ? "display:none;" : "")" aria-label="Remove Ingredient">&times;</button>
                        </div>
                    </div>
                }
                @* --- 👆 КРАЙ НА @for ЦИКЪЛА 👆 --- *@
            </div>
            @* --- 👆 КРАЙ НА КОНТЕЙНЕРА ЗА РЕДОВЕ 👆 --- *@

            @* --- БУТОН ЗА ДОБАВЯНЕ --- *@
            <button type="button" id="addIngredientBtn" class="btn btn-outline-secondary mb-3">Add New Ingredient</button>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Recipe</button>
            </div>
        </form>
    </div>

    @* --- ШАБЛОНЪТ (ОСТАВА СЪЩИЯТ) --- *@
    <div id="ingredientRowTemplate" class="ingredient-row row mb-3 align-items-start" style="display: none;" data-index="__INDEX__">
        @* ... (Съдържанието на шаблона е същото като преди) ... *@
        <div class="col-md-5 ingredient-selection">
            <label for="Ingredients___INDEX__IngredientId" class="form-label">Ingredient</label>
            <select name="Ingredients[__INDEX__].IngredientId" class="form-select ingredient-select">
                <option value="">-- Select Ingredient --</option>
                <option value="-1">-- Add New Ingredient --</option>
                @foreach (var item in Model.AvailableIngredients)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span class="text-danger field-validation-valid" data-valmsg-for="Ingredients[__INDEX__].IngredientId"></span>
            <div class="new-ingredient-fields" style="display: none; margin-top: 10px;">
                <input name="Ingredients[__INDEX__].NewIngredientName" class="form-control mb-2" placeholder="Enter new ingredient name" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Ingredients[__INDEX__].NewIngredientName"></span>
                <select name="Ingredients[__INDEX__].NewIngredientTypeId" class="form-select ingredient-type-select">
                    <option value="">-- Select Type --</option>
                    @foreach (var item in Model.AvailableIngredientTypes)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span class="text-danger field-validation-valid" data-valmsg-for="Ingredients[__INDEX__].NewIngredientTypeId"></span>
            </div>
        </div>
        <div class="col-md-3">
            <label for="Ingredients___INDEX__Quantity" class="form-label">Quantity</label>
            <input name="Ingredients[__INDEX__].Quantity" type="number" step="any" class="form-control" placeholder="e.g., 5.5" />
            <span class="text-danger field-validation-valid" data-valmsg-for="Ingredients[__INDEX__].Quantity"></span>
        </div>
        <div class="col-md-3">
            <label for="Ingredients___INDEX__Unit" class="form-label">Unit</label>
            <select name="Ingredients[__INDEX__].Unit" class="form-select">
                <option value="">-- Unit --</option>
                @foreach (var item in Model.AvailableUnits)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span class="text-danger field-validation-valid" data-valmsg-for="Ingredients[__INDEX__].Unit"></span>
        </div>
        <div class="col-md-1 text-end">
            <button type="button" class="btn btn-sm btn-outline-danger remove-ingredient mt-4" aria-label="Remove Ingredient">&times;</button>
        </div>
    </div>

    <aside class="info-panel">
        <h3>Recipe Tips</h3>
        <p>A great recipe starts with quality ingredients and accurate measurements.</p>
        <ul>
            <li>Ensure your equipment is sanitized.</li>
            <li>Control your fermentation temperature.</li>
            <li>Don't be afraid to experiment!</li>
        </ul>
        <p>The description field supports notes about your process, taste, and results.</p>
    </aside>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/add-recipe.js"></script>
}